{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",

    "baseUrl": "./",
    "paths": {
      "@services/*": ["src/data-access/services/*"],
      "@utils/*": ["src/utils/*"]
    },
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
